---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
};
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="blog-header">
        <h1>// Blog</h1>
        <p class="blog-subtitle">
          Thoughts and explorations in AI, Machine Learning, and NLP.
        </p>
      </section>

      <section class="posts-list">
        {posts.map((post, index) => (
          <article class="post-item">
            <a href={`/blog/blog/${post.id}/`}>
              <div class="post-number">{String(index + 1).padStart(2, '0')}</div>
              <div class="post-content">
                <div class="post-meta">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                </div>
                <h2>{post.data.title}</h2>
                <p>{post.data.description}</p>
              </div>
              <div class="post-arrow">â†’</div>
            </a>
          </article>
        ))}
      </section>
    </main>
    <Footer />

    <style>
      main {
        padding-top: 6rem;
        max-width: 900px;
      }

      .blog-header {
        padding: 3rem 0 4rem;
        text-align: center;
      }

      .blog-header h1 {
        color: var(--accent-lime);
        font-size: 1.2rem;
        margin-bottom: 1rem;
        letter-spacing: 0.15em;
      }

      .blog-subtitle {
        color: var(--text-secondary);
        font-size: 1rem;
        max-width: 500px;
        margin: 0 auto;
      }

      .posts-list {
        display: flex;
        flex-direction: column;
        gap: 0;
      }

      .post-item {
        border-top: 1px solid var(--border-default);
      }

      .post-item:last-child {
        border-bottom: 1px solid var(--border-default);
      }

      .post-item a {
        display: grid;
        grid-template-columns: 50px 1fr 40px;
        align-items: center;
        gap: 1.5rem;
        padding: 1.5rem 1rem;
        text-decoration: none;
        transition: background-color 150ms ease;
        color: inherit;
      }

      .post-item a:hover {
        background-color: #0d0d0d;
        color: inherit;
      }

      .post-number {
        font-size: 0.85rem;
        color: var(--text-muted);
        font-weight: 500;
      }

      .post-item:hover .post-number {
        color: #ceff1a;
        text-shadow: 0 0 8px rgba(206, 255, 26, 0.4);
      }

      .post-content {
        min-width: 0;
      }

      .post-meta time {
        font-size: 0.75rem;
        color: #606060;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .post-content h2 {
        font-size: 1.1rem;
        color: #f5f5f5;
        margin: 0.5rem 0;
        text-transform: none;
        letter-spacing: normal;
        line-height: 1.4;
        transition: all 150ms ease;
      }

      .post-item:hover .post-content h2 {
        color: #ceff1a;
        text-shadow: 0 0 8px rgba(206, 255, 26, 0.4);
      }

      .post-content p {
        font-size: 0.9rem;
        color: #a0a0a0;
        margin: 0;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .post-arrow {
        font-size: 1.2rem;
        color: #606060;
        transition: all 150ms ease;
      }

      .post-item:hover .post-arrow {
        color: #ceff1a;
        transform: translateX(4px);
      }

      @media (max-width: 768px) {
        .post-item a {
          grid-template-columns: 40px 1fr 30px;
          gap: 1rem;
          padding: 1.25rem 0.5rem;
        }

        .post-content h2 {
          font-size: 1rem;
        }
      }
    </style>
  </body>
</html>
